<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.fire.MainActivity" >


    <TextView
        android:id="@+id/main_textView1"
        android:layout_width="fill_parent"
        android:layout_height="35dp"
        android:background="@color/firebrick"
        android:gravity="center"
        android:text="TEXT TORCH"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/white"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:gravity="center_vertical" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="To:"
            android:textAppearance="@android:style/TextAppearance.Medium" />

        <EditText
            android:id="@+id/main_editText1"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:textColor="@color/gray" >

            <requestFocus />
        </EditText>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="90dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp" >

        <EditText
            android:id="@+id/main_editText2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:ems="10"
            android:gravity="top"
            android:inputType="textMultiLine"
            android:text="Enter Text Here ..."
            android:textColor="@color/gray" />

        <ImageView
            android:id="@+id/main_imageView1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:visibility="gone" />
    </RelativeLayout>

    <Button
        android:id="@+id/main_button1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="-70dp"
        android:text="Torch" />

</LinearLayout>